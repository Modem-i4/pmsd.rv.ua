{
  "$schema": "https://schemas.wp.org/wp/6.8/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "layout": { "contentSize": "1200px", "wideSize": "1500px" },
    "spacing": { "units": ["%", "px", "em", "rem", "vh", "vw"] },

    "color": {
      "palette": [
        { "color": "#05B5B9", "name": "Бірюзовий", "slug": "turquoise" }
      ]
    },

    "typography": {
      "fontFamilies": [
        {
          "slug": "system-font",
          "name": "System Font",
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
        },
        {
          "slug": "inter",
          "name": "Inter",
          "fontFamily": "\"Inter\", sans-serif",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": ["file:./fonts/Inter24pt-Regular.woff2"]
            },
            {
              "fontFamily": "Inter",
              "fontStyle": "normal",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "src": ["file:./fonts/Inter18pt-SemiBold.woff2"]
            },
            {
              "fontFamily": "Inter",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": ["file:./fonts/Inter18pt-Bold.woff2"]
            }
          ]
        }
      ]
    },

    "useRootPaddingAwareAlignments": true
  },

  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "700"
        }
      }
    }
  },

  "templateParts": [
    { "area": "header", "name": "header" },
    { "area": "footer", "name": "footer" }
  ]
}
