{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "parts-blocks/consent-checkbox",
  "title": "Consent Checkbox",
  "category": "parts-blocks",
  "icon": "yes-alt",
  "description": "Чекбокс з лейблом і кастомним текстом посилання.",
  "supports": {
    "html": false,
    "anchor": false,
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "fontFamily": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textTransform": true,
      "textDecoration": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "labelBefore": { "type": "string", "default": "Я даю згоду на обробку моїх персональних даних. (Будь ласка, ознайомтеся з нашою" },
    "linkText":   { "type": "string", "default": "політикою обробки даних" },
    "labelAfter": { "type": "string", "default": ", перш ніж надати згоду.)" },
    "linkUrl":    { "type": "string", "default": "#" },
    "isRequired": { "type": "boolean", "default": true },
    "inputName":  { "type": "string", "default": "consent" }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css"
}
